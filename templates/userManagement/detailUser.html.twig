                    {% trans %}general.firstName{% endtrans %}
                </th>
                <td>
                    {{user.firstName}}
                </td>
                <td>
                    {{form_widget(editUserForm.firstName)}}
                </td>
            </tr>
            <tr>
                <th>
                    {% trans %}general.lastName{% endtrans %}
                </th>
                <td>
                    {{user.lastName}}
                </td>
                <td>
                    {{form_widget(editUserForm.lastName)}}
