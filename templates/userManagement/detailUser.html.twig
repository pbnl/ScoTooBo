{% extends "includes/base.html.twig" %}

{% block title %}{% trans %}menu.userManagement.detailUser{% endtrans %}{% endblock %}

{% block sidenav %}
    {% include "includes/sidebarUserGroup.html.twig" with {"detailUser": "active"} %}
{% endblock %}

{% block content %}
    {% include 'includes/showFlashes.html.twig' %}
    {% if user != false%} <h2 data-step="2" data-intro="{% trans %}IntroJS.detailUser.username{% endtrans %}">{{ user.givenName }}</h2> {% endif %}

    {% if editUserForm == false  and user != false%}
        <table class="table table-striped" data-step="1" data-intro="{% trans %}IntroJS.detailUser.welcome{% endtrans %}">
            <thead class="">
            <tr data-step="3" data-intro="{% trans %}IntroJS.detailUser.tableOther{% endtrans %}">
                <th>
                    {% trans %}general.name{% endtrans %}
                </th>
                <th>
                    {% trans %}general.value{% endtrans %}
                </th>
                <th>
                    {% trans %}general.edit{% endtrans %}
                </th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <th>
                    {% trans %}general.username{% endtrans %}
                </th>
                <td>
                    {{user.givenName}}
                </td>
            </tr>
            <tr>
                <th>
                    {% trans %}general.uidNumber{% endtrans %}
                </th>
                <td>
                    {{user.uidNumber}}
                </td>
            </tr>
            <tr>
                <th>
                    {% trans %}general.firstName{% endtrans %}
                </th>
                <td>
                    {{user.firstName}}
                </td>
            </tr>
            <tr>
                <th>
                    {% trans %}general.lastName{% endtrans %}
                </th>
                <td>
                    {{user.lastName}}
                </td>
            </tr>
            <tr>
                <th>
                    {% trans %}general.mail{% endtrans %}
                </th>
                <td>
                    {{user.mail}}
                </td>
            </tr>
            <tr>
                <th>
                    Passwort
                </th>
                <td>
                    -
                </td>
            </tr>
            <tr>
                <th>
                    {% trans %}general.city{% endtrans %}
                </th>
                <td>
                    {{user.city}}
                </td>
            </tr>
            <tr>
                <th>
                    {% trans %}general.postalCode{% endtrans %}
                </th>
                <td>
                    {{user.postalCode}}
                </td>
            </tr>
            <tr>
                <th>
                    {% trans %}general.street{% endtrans %}
                </th>
                <td>
                    {{user.street}}
                </td>
            </tr>
            <tr>
                <th>
                    {% trans %}general.phoneNumber.home{% endtrans %}
                </th>
                <td>
                    {{user.homePhoneNumber}}
                </td>
            </tr>
            <tr>
                <th>
                    {% trans %}general.phoneNumber.mobile{% endtrans %}
                </th>
                <td>
                    {{user.mobilePhoneNumber}}
                </td>
            </tr>
            </tbody>
        </table>
    {% endif %}
    {% if editUserForm != false and user != false %}
        {% form_theme editUserForm 'bootstrap_3_horizontal_layout.html.twig' %}
        {{ form_start(editUserForm) }}
        <table class="table table-striped" data-step="1" data-intro="{% trans %}IntroJS.detailUser.welcome{% endtrans %}">
            <thead data-step="3" data-intro="{% trans %}IntroJS.detailUser.tableOwn{% endtrans %}">
            <tr>
                <th>
                    {% trans %}general.name{% endtrans %}
                </th>
                <th>
                    {% trans %}general.value{% endtrans %}
                </th>
                <th>
                    {% trans %}general.edit{% endtrans %}
                </th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <th>
                    {% trans %}general.username{% endtrans %}
                </th>
                <td>
                    {{user.givenName}}
                </td>
                <td data-step="4" data-intro="{% trans %}IntroJS.detailUser.notedit{% endtrans %}">
                    {% trans %}general.not.editable{% endtrans %}
                </td>
            </tr>
            <tr>
                <th>
                    {% trans %}general.uidNumber{% endtrans %}
                </th>
                <td>
                    {{user.uidNumber}}
                </td>
                <td>
                    {% trans %}general.not.editable{% endtrans %}
