{% extends 'includes/base.html.twig' %}

{% block title %}{% trans %}403ErrorPage.title{% endtrans %}{% endblock %}

{% block body %}
    <div class="container" style="padding-top: 4rem;">
        <h1>{% trans %}403ErrorPage.head{% endtrans %}</h1>

        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <a href="{{ path('logout') }}">{% trans %}403ErrorPage.logoutFirst{% endtrans %}</a>
        {% endif %}

        <p>
            {% trans %}403ErrorPage.thenLoginWithCorrectUser{% endtrans %} <a href="{{ path('login') }}">{% trans %}general.login{% endtrans %}</a>.

            {% trans %}403ErrorPage.feedBackReference{% endtrans %}
        </p>
    </div>
{% endblock %}
