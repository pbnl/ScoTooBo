{% extends "includes/base.html.twig" %}

{% block title %}Alle Gruppen{% endblock %}

{% block sidenav %}
    {% include "includes/sidebarUserGroup.html.twig" with {"showAllGroups": "active"} %}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    {% include 'includes/showFlashes.html.twig' %}
    <h2>{% trans %}Group.showAll.myGroups{% endtrans %}</h2>
    <div class="col-sm-6">
        <table class="table table-striped tablesorter table-bordered table-responsive">
            <thead class="">
            <tr>
                <th class="filter-false">
                    {% trans %}general.nr{% endtrans %}
                </th>
                <th>
                    {% trans %}general.gid{% endtrans %}
                </th>
                <th>
                    {% trans %}general.name{% endtrans %}
                </th>
            </tr>
            </thead>
            <tbody>
            {% for group in groups %}
                <tr>
                    <td>
                        {{ loop.index}}
                    </td>
                    <td>
                        {{group.gidNumber}}
                    </td>
                    <td>
                        <a href="{{ path('showDetailGroup', {'groupCn': group.cn}) }}">{{group.name}}</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>

            <tfoot>
            <tr>
                <th colspan="3" class="ts-pager">
                    <div class="form-inline">
                        <div class="btn-group btn-group-sm mx-1" role="group">
                            <button type="button" class="btn btn-secondary first" title="first">⇤</button>
                            <button type="button" class="btn btn-secondary prev" title="previous">←</button>
                        </div>
                        <span class="pagedisplay"></span>
                        <div class="btn-group btn-group-sm mx-1" role="group">
                            <button type="button" class="btn btn-secondary next" title="next">→</button>
                            <button type="button" class="btn btn-secondary last" title="last">⇥</button>
                        </div>
                        <select class="form-control-sm custom-select px-1 pagesize" title="Select page size">
                            <option selected="selected" value="10">10</option>
                            <option value="20">20</option>
                            <option value="30">30</option>
                            <option value="all">All Rows</option>
                        </select>
                        <select class="form-control-sm custom-select px-4 mx-1 pagenum" title="Select page number"></select>
                    </div>
                </th>
            </tr>
            </tfoot>
        </table>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/tablesorter.js') }}"></script>

{% endblock %}
