            </tr>
            <tr>
                <th>
                    {% trans %}general.mail{% endtrans %}
                </th>
                <td>
                    {{user.mail}}
                </td>
                <td>
                    {% trans %}general.not.editable{% endtrans %}
                </td>
            </tr>
            <tr>
                <th>
                    Passwort
                </th>
                <td>
                    -
                </td>
                <td>
                    <a href="{{ path('changeUserPassword', {"uid":user.uid}) }}" >Ã„ndern</a>
                </td>
            </tr>
            <tr>
                <th>
                    {% trans %}general.city{% endtrans %}
                </th>
                <td>
                    {{user.city}}
                </td>
                <td>
                    {{form_widget(editUserForm.city)}}
                </td>
            </tr>
            <tr>
                <th>
                    {% trans %}general.postalCode{% endtrans %}
                </th>
                <td>
                    {{user.postalCode}}
                </td>
                <td>
                    {{form_widget(editUserForm.postalCode)}}
                </td>
            </tr>
            <tr>
                <th>
                    {% trans %}general.street{% endtrans %}
                </th>
                <td>
                    {{user.street}}
                </td>
                <td>
                    {{form_widget(editUserForm.street)}}
                </td>
            </tr>
            <tr>
                <th>
                    {% trans %}general.phoneNumber.home{% endtrans %}
                </th>
                <td>
                    {{user.homePhoneNumber}}
                </td>
                <td>
                    {{form_widget(editUserForm.homePhoneNumber)}}
                </td>
            </tr>
            <tr>
                <th>
                    {% trans %}general.phoneNumber.mobile{% endtrans %}
                </th>
                <td>
                    {{user.mobilePhoneNumber}}
                </td>
                <td>
                    {{form_widget(editUserForm.mobilePhoneNumber)}}
                </td>
            </tr>
            </tbody>
        </table>
        {{ form_end(editUserForm) }}
    {% endif %}

{% endblock %}
